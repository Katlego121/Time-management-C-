        }

        .login-container input[type="submit"] {
            width: 100%;
            padding: 12px;
            margin: 20px 0;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .login-container a {
            text-decoration: none;
            color: #007BFF;
        }

            .login-container a:hover {
                text-decoration: underline;
            }

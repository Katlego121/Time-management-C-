<div class="login-container">
    <form id="loginForm" method="post">
        <h3>Modules</h3>
        <input type="text" name="moduleCode" placeholder="Module Code" required>
        <input type="text" name="moduleName" placeholder="Module Name" required>
        <input type="number" name="credits" placeholder="Credits" required />
        <input type="number" name="hoursPerWeek" placeholder="Hours Per Week" required/>
        <input type="number" name="weeks" placeholder="Weeks" required />
        <input type="date" name="startSemester" placeholder="Start Semester" required />
        <input type="number" name="selfStudyHours" placeholder="Self Study Hours" required />
        <input type="submit" value="Submit">
    </form>
</div>

